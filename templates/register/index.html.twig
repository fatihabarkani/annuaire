{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
   <div class="wrapper">
    {# <section class="form"> #}
        <h1>Demande d'inscription</h1>
        {# alerte notification si inscription ok -> succès #}
        {% if notification %}

            <div class="alert alert-success">
                {{notification}}
            </div>

        {% endif %}

        <div class="row">
            <div class="col"></div>
            <div class="col-12">
                {{form_start(form)}}

                <div class="mb-3">
                    {{form_label(form.adresse_rue, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                    {{form_row(form.adresse_rue, {'attr': {'class':'form-control'}}) }}
                </div>
                
                {{form_label(form.adresse_num, 'Numéro', {'label_attr': {'class': 'form-label'}})}}
                {{form_row(form.adresse_num, {'attr': {'class':'form-control'}}) }}

                {{form_label(form.commune, 'commune', {'label_attr': {'class': 'form-label'}})}}
                {{form_row(form.commune, {'attr': {'class':'form-control'}}) }}

                {{form_label(form.localite, 'Localité', {'label_attr': {'class': 'form-label'}})}}
                {{form_row(form.localite, {'attr': {'class':'form-control'}}) }}

                {{form_label(form.codePostal, 'Code Postal', {'label_attr': {'class': 'form-label'}})}}
                {{form_row(form.codePostal, {'attr': {'class':'form-control'}}) }}

                {{form_label(form.email, 'Votre adresse email', {'label_attr': {'class': 'form-label'}})}}
                {{form_row(form.email, {'attr': {'class':'form-control'}}) }}

                {{form_row(form.password)}}

                {{form_end(form)}}

            </div>
            <div class="col"></div>
        </div>
    {# </section> #}
</div>
{% endblock %}
