{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}
<div class="wrapper">
    <h1>Formulaire de contact</h1>
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <div class="form-group">
                {{ form_start(form) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
            </div>
                {{ form_end(form) }}
        </div>
        <div class="col"></div>
    </div>
</div>
{% endblock %}
