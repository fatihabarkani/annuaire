{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

{# le champs de recherche prestataire #}
<div class="wrapper">
  <h1>Bienvenue sur l'annuaire de Bien-être</h1>
  {{ render(path('recherche'))}}
    {# slider page d'accueil #}
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="uploads/accueil_image.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="uploads/bien-etre.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="uploads/detente.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
</div>

  <!--4 prestataires et categories page accueil-->

  {# section catégories #}
  <section>
    <h2>Nos catégories de service</h2>
    <div class="categories-container">
      {% for item in categorieService %}
        {# La catégorie de service en Avant#}
        {% if item.enAvant %}
          <div class="container-cat-mois">
              <div class="card-body">
                <div class="link-categories">
                  <a href='{{ path('cat_detail', {id: item.Id}) }}'><h3>{{ item.nom }}</h3></a>
                  <p class="description text-muted">{{item.description}}</p>
                  <img class="img-cat" src="{{ asset('/uploads/'~item.images.image) }}" alt="photo_categorie">{#item=catserv-images=attr-class#}
                </div>
            </div>
              <h3 class="promo">Le service du mois</h3>
          </div>
        {% else %}
          <div class="link-categories">
              <a href='{{ path('cat_detail', {id: item.Id}) }}'><h3>{{ item.nom }}</h3></a>
              <p class="description text-muted">{{item.description}}</p>
              <img class="img-cat" src="{{ asset('/uploads/'~item.images.image) }}" alt="photo_categorie">{#item=catserv-images=attr-class#}
          </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {# section prestataires #}
  <section>
    <h2>Nos prestataires</h2>
    <div class="prestataires-container">
        {% for item in prestataire %}
          <div class="link-prestataires">
            <a href='{{ path('prest_detail', {id: item.Id}) }}'><h3 class="nom_prestataire">{{ item.nom }}</h3></a> 
            <p class="site_prestataire text-muted">{{item.siteInternet}}</p>
            {% for image in item.images %}
              <img class="img-prest" src="{{ asset('/uploads/'~image.image) }}" alt="photo_prestataire">
            {% endfor %}
          </div>
        {% endfor %}
    </div>
  </section>
</div>
{% endblock %}
